{
  "compilerOptions": {
    "lib": [
      "ES2021",
      "DOM"
    ],
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2021",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}